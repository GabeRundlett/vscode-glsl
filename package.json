{
  "name": "glsl-language-support",
  "displayName": "GLSL Language Support",
  "description": "Language support for GLSL using glslls",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "glsl",
        "aliases": [
          "GLSL",
          "glsl"
        ],
        "extensions": [
          ".glsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "glsl",
        "scopeName": "source.glsl",
        "path": "./syntaxes/glsl.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "glsl.glslls.install",
        "title": "Install Language Server",
        "category": "GLSL Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GLSL",
      "properties": {
        "glsl.glslls.enabled": {
          "scope": "resource",
          "type": "boolean",
          "description": "Whether to enable glslls",
          "default": true
        },
        "glsl.glslls.path": {
          "scope": "resource",
          "type": "string",
          "description": "Path to `glslls` executable. Example: `/usr/local/bin/glslls`. If ${workspaceFolder} is used, it will resolve to the first workspace folder.",
          "format": "path"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "mkdirp": "^3.0.1",
    "vscode-languageclient": "^8.1.0",
    "which": "^3.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@types/which": "^2.0.1"
  }
}